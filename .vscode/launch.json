    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}",
            "justMyCode": false
        },

        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Python: Django",
            "type": "pwa-chrome",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
                //"--no-debugger",
                "--noreload",
                "--nothreading"
            ],
    
                "django": true
        }
    ]
}